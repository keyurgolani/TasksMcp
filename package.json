{
  "name": "task-list-mcp",
  "version": "2.6.0",
  "description": "An intelligent Model Context Protocol (MCP) server for task management with AI-powered complexity analysis and multi-agent orchestration support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "task-list-mcp": "./dist/app/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "AGENTS.md",
    "examples/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/keyurgolani/task-list-mcp.git"
  },
  "homepage": "https://github.com/keyurgolani/task-list-mcp#readme",
  "bugs": {
    "url": "https://github.com/keyurgolani/task-list-mcp/issues"
  },
  "scripts": {
    "script": "node scripts/run.js",
    "setup": "./scripts/setup.sh",
    "workflow": "node scripts/workflows.js",
    "build": "npm run build:prod",
    "build:prod": "tsc --noEmit && tsc && npm run minify && chmod +x dist/app/cli.js",
    "build:dev": "tsc --noEmit && tsc && chmod +x dist/app/cli.js",
    "minify": "find dist -name '*.js' -exec terser {} --compress --mangle --module --output {} \\;",
    "start": "node dist/index.js",
    "start:api": "node dist/app/api-server.js",
    "dev:api": "npm run build:dev && npm run start:api",
    "prepublishOnly": "npm run build:prod",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "./scripts/clean.sh",
    "clean:deep": "./scripts/clean.sh --deep",
    "clean:build": "./scripts/clean.sh --build",
    "validate": "./scripts/validate.sh",
    "health": "node dist/app/health-check.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "npx tsc --noEmit --skipLibCheck",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"scripts/**/*.{js,json}\" \"*.{js,json,md}\" \"**/*.md\"",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"scripts/**/*.{js,json}\" \"*.{js,json,md}\" \"**/*.md\"",
    "dev": "npm run build:dev && npm run start",
    "version:sync": "node scripts/sync-version.js",
    "version:update": "./scripts/update-version.sh",
    "preversion": "npm run version:sync",
    "postversion": "node scripts/sync-version.js --from-package"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "task-management",
    "ai",
    "todo",
    "productivity",
    "claude",
    "anthropic",
    "automation",
    "workflow",
    "intelligent-tasks",
    "complexity-analysis",
    "multi-agent",
    "orchestration",
    "dependencies",
    "parallel-execution"
  ],
  "author": {
    "name": "Keyur Golani",
    "url": "https://github.com/keyurgolani/task-list-mcp"
  },
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/keyurgolani"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "terser": "^5.24.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

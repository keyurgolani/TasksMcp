{
  "name": "task-list-mcp",
  "version": "2.1.2",
  "description": "An intelligent Model Context Protocol (MCP) server for task management with AI-powered complexity analysis",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "task-list-mcp": "./dist/app/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "AGENTS.md",
    "examples/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/keyurgolani/task-list-mcp.git"
  },
  "homepage": "https://github.com/keyurgolani/task-list-mcp#readme",
  "bugs": {
    "url": "https://github.com/keyurgolani/task-list-mcp/issues"
  },
  "scripts": {
    "build": "npm run build:prod",
    "build:prod": "tsc --noEmit && tsc && npm run minify && chmod +x dist/app/cli.js",
    "build:dev": "tsc --noEmit && tsc && chmod +x dist/app/cli.js",
    "minify": "find dist -name '*.js' -exec terser {} --compress --mangle --module --output {} \\;",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build:prod",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "./scripts/cleanup.sh",
    "clean:deep": "./scripts/cleanup.sh --deep",
    "clean:build": "./scripts/cleanup.sh --build",
    "validate": "./scripts/validate-project.sh",
    "health": "node dist/app/health-check.js",
    "lint": "npx tsc --noEmit --skipLibCheck",
    "dev": "npm run build:dev && npm run start",
    "version:sync": "node scripts/sync-version.js",
    "version:update": "./scripts/update-version.sh",
    "preversion": "npm run version:sync",
    "postversion": "npm run version:sync"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "task-management",
    "ai",
    "todo",
    "productivity",
    "claude",
    "anthropic",
    "automation",
    "workflow",
    "intelligent-tasks",
    "complexity-analysis"
  ],
  "author": {
    "name": "Keyur Golani",
    "url": "https://github.com/keyurgolani/task-list-mcp"
  },
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/keyurgolani"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@vitest/ui": "^3.2.4",
    "terser": "^5.24.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
